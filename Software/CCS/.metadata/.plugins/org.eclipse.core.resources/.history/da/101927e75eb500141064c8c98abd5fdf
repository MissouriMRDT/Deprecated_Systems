#include "roveTelemController.h"

Void roveTelemController(UArg arg0, UArg arg1)
{

	// Package Telem Struct
	struct package_telem_struct package_telem_struct;

	// Motor Data Struct
	struct motor_data_struct motor_data_struct;

	while(1)
	{

		mux_1( 9 );
		ms_delay( 1 );

		System_printf("roveTelemController is waiting for a message on mux_1( 9 ) \n");
		System_flush();

		// Read Uart Mailbox
		package_telem_struct.id = motor_data_struct.id
		package_telem_struct.value = motor_data_struct.value
		Mailbox_post(fromUartsMailbox, &package_telem_struct, BIOS_WAIT_FOREVER);

		//void generate_json_strings(char *string_buf, const char *id, const char *value)
		generate_json_strings(char *string_buf, const char *id, const char *value)

		mux_2( 10 );
		ms_delay( 1 );

		System_printf("roveTelemController is waiting for a message on mux_2( 10 ) \n");
		System_flush();

		//package_telem_struct.id = motor_data_struct.id
		//package_telem_struct.value = motor_data_struct.value
		Mailbox_post(toBaseStationMailbox, &package_telem_struct, BIOS_WAIT_FOREVER);

		//void generate_json_strings(char *string_buf, const char *id, const char *value)
		//generate_json_strings(char *string_buf, const char *id, const char *value)



		System_printf("roveTelemController is waiting for a message on mux_2( 10 ) \n");
		System_flush();

		// Read Uart Mailbox
		Mailbox_pend(toBaseStationMailbox, &motor_data_struct, BIOS_WAIT_FOREVER);
		package_telem_struct.id = motor_data_struct.id
		package_telem_struct.value = motor_data_struct.value

	}//endwhile

}//endfnct roveTelemContoller



